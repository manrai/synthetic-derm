            "justMyCode": true
        },
        {
            "name": "[Examples] Generate synthetic images",
            "type": "debugpy",
            "request": "launch",
            "program": "synderm/synderm/examples/generate_synthetic_images.py",
            "args": [],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "[Examples] Train text-to-image diffusion model",
            "type": "debugpy",
            "request": "launch",
            "program": "synderm/synderm/examples/train_diffusion_model.py",
            "args": [],
